<div class="add-car">
    
    <h5 class="add-car-heading">
        Add a car.
    </h5>

    <form class="add-car-form" method="POST" action="/car">

        <div class="form-group form-title">

            <label for="title">
                Title
            </label>

            <input 
            id="title"
            type="text"
            class="form-control"
            name="title"
            placeholder="What do you want to do?"
            />

        </div>

        <div class="form-group form-submit">

            <button type="submit" class="btn btn-primary">
                add car
            </button>

        </div>

    </form>

</div>